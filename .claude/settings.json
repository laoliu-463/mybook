{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup|resume",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/session_reminder.py",
            "description": "Remind news-educator rules at session start"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash|Skill",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/gatekeeper.py",
            "description": "Block publish if candidate pack not reviewed (gate != gate1_reviewed)"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/news_validate.py",
            "description": "Validate news candidate pack: whitelist + review checkboxes + release filter"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/quality_scan.py",
            "description": "Block stop if release notes > threshold or missing sources"
          },
          {
            "type": "command",
            "command": "python .claude/hooks/whitelist_scan.py",
            "description": "Block stop if non-whitelist URLs found in outputs"
          }
        ]
      }
    ]
  }
}
